<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ERP.Mobile.Views.Core.Login" BackgroundColor="{DynamicResource ThemeColor}">
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="15, 50">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--<Label Text="LOGIN" Grid.Row="0"/>-->
                <Entry Placeholder="Username" Text="{Binding Username}" Grid.Row="1"/>
                <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" Grid.Row="2"/>
                <Button Grid.Row="3" Command="{Binding LoginCommand}" Text="Login"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>